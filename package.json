  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/ioredis": "^4.28.10",
    "@types/ioredis-mock": "^5.6.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "ioredis-mock": "^8.2.2",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "ts-jest": "^28.0.6",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@twurple/api": "^5.1.6",
    "@twurple/auth": "^5.1.6",
